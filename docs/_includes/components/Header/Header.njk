<style>
.button__icon {
  grid-area: 1/1;
  opacity: 0;
}
.menu__nav {
  visibility: hidden;
}
.menu__blur {
  display: none;
}
@media (min-width: 400px) {
  .menu--open .menu__blur {
    display: block;
  }
}
.menu--open .menu__icon__close{
  opacity: 1;
}
.menu--open .menu__nav {
  visibility: visible;
}
body:not(.menu--open) .menu__icon__burger {
  opacity: 1;
}
body:not(.menu--open) .menu__nav {
  transform: translate3d(-100%, 0, 0);
}
@media (min-width: 1024px) {
  body:not(.menu--open) .menu__nav {
    transform: translate3d(0, 0, 0);
    visibility: visible;
  }
}
</style>
<aside class="menu lg:w-96">
  <div class="menu__blur fixed inset-0 z-10 bg-zinc-400/20 backdrop-blur-sm dark:bg-black/40 opacity-100"></div>
  <header class="relative w-full">
    <div class="bg-primary p-4 xl:p-8 flex items-center fixed top-0 left-0 z-20 w-full">
      <button class="w-8 p-1 grid menu__button lg:hidden" type="button" aria-label="Toggle navigation bar">
        <svg xmlns="http://www.w3.org/2000/svg" class="button__icon menu__icon__burger" fill="currentColor" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" clip-rule="evenodd" viewBox="0 0 24 24"><path fill-rule="nonzero" d="M22 16.75a.75.75 0 0 0-.75-.75H2.75a.75.75 0 0 0 0 1.5h18.5c.41 0 .75-.34.75-.75zm0-5a.75.75 0 0 0-.75-.75H2.75a.75.75 0 0 0 0 1.5h18.5c.41 0 .75-.34.75-.75zm0-5a.75.75 0 0 0-.75-.75H2.75a.75.75 0 0 0 0 1.5h18.5c.41 0 .75-.34.75-.75z"/></svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="button__icon menu__icon__close" fill="currentColor" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" clip-rule="evenodd" viewBox="0 0 24 24"><path d="m12 10.93 5.72-5.72a.75.75 0 0 1 1.06 1.06L13.06 12l5.72 5.72a.75.75 0 0 1-.53 1.28.75.75 0 0 1-.53-.22L12 13.05l-5.72 5.72a.75.75 0 0 1-1.06-1.06l5.72-5.72-5.72-5.72a.75.75 0 0 1 1.06-1.06z"/></svg>
      </button>
      <a class="ml-4 lg:ml-0" href="/">@sardine/colour</a>
    </div>
    <nav class="menu__nav bg-primary fixed z-10 top-0 bottom-0 left-0 p-4 xl:p-8 mt-16 transition-all overflow-y-auto lg:w-72 xl:w-96 lg:transition-none">
      <h2 class="text-2xl">Documentation</h2>
      <h3 class="mt-4 text-xl" {% if page.url == '/docs/' %} aria-current="page"{% endif %}>Getting started</h3>
      <ul class="flex flex-col ml-3">
        <li class="flex" {% if page.url == '/docs/#introduction' %} aria-current="page"{% endif %}>
          <a class="py-2 w-full" href="/docs/#introduction">Introduction</a>
        </li>
        <li class="flex" {% if page.url == '/docs/#installation' %} aria-current="page"{% endif %}>
          <a class="py-2 w-full" href="/docs/#installation">Installation</a>
        </li>
        <li class="flex" {% if page.url == '/docs/#usage' %} aria-current="page"{% endif %}>
          <a class="py-2 w-full" href="/docs/#usage">Usage</a>
        </li>
      </ul>
      {% set taglist = ['converters', 'util'] %}
       {%- for tag in taglist -%}
        <h3 class="mt-4 text-xl capitalize">{{ tag }}</h3>
        <ul class="flex flex-col ml-3">
          {%- for doc in collections[tag] -%}
          <li class="flex" {% if page.url == doc.url %} aria-current="page"{% endif %} >
            <a class="py-2 w-full" href="{{ doc.url }}">{{ doc.data.title }}</a>
          </li>
          {%- endfor -%}
        </ul>
      {%- endfor -%}
    </nav>
  </header>
</aside>
<script>
  const body = document.querySelector('body');
  const button = document.querySelector('button');
  button.addEventListener('click', () => {
    body.classList.toggle('menu--open');
  });
</script>
