{
  "name": "@sardine/colour",
  "version": "2.0.0",
  "description": "It does things to colours",
  "module": "./dist/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/cjs/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rm -rf ./dist && npm run build:esm && npm run build:cjs && npm run types:emit",
    "build:esm": "npx swc --config-file .esm.swcrc ./src -d ./dist",
    "build:cjs": "npx swc --config-file .cjs.swcrc ./src -d ./dist/cjs",
    "build:docs": "ELEVENTY_ENV=production npx @11ty/eleventy --config=.eleventy.cjs",
    "start:docs": "ELEVENTY_ENV=development npx @11ty/eleventy --config=.eleventy.cjs --serve",
    "test": "rm -rf ./dist && npm run build:esm && c8 ava",
    "test:coverage": "c8 -r lcovonly report",
    "types:emit": "npx tsc --declaration --emitDeclarationOnly",
    "types:check": "npx tsc --noEmit",
    "rome:format": "rome format ./src --write",
    "rome:ci": "rome ci ./src",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sardinedev/colour.git"
  },
  "files": [
    "dist",
    "!dist/tests"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "color",
    "colour"
  ],
  "author": "Hugo Nogueira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sardinedev/colour/issues"
  },
  "homepage": "https://github.com/sardinedev/colour#readme",
  "engines": {
    "node": ">= 16"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@changesets/cli": "^2.24.1",
    "@sardine/eleventy-plugin-code-highlighter": "^1.2.0",
    "@sardine/eleventy-plugin-external-links": "^1.4.0",
    "@sardine/eleventy-plugin-image-optimiser": "^1.2.0",
    "@sardine/eleventy-plugin-tinycss": "^2.0.0",
    "@sardine/eleventy-plugin-tinyhtml": "^0.2.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.219",
    "@tsconfig/node16": "^1.0.4",
    "autoprefixer": "^10.4.8",
    "ava": "^4.3.1",
    "c8": "^7.12.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.16",
    "rome": "12.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npx rome format ./src --write",
      "npx rome check ./src --apply"
    ]
  }
}
